<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adriangehrke.timetrackapp">

    <application
        android:name="com.example.adriangehrke.timetrackapp.Timetrack"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StopwatchActivity"
            android:label="@string/title_activity_stopwatch"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".ClientsActivity"
            android:label="@string/title_activity_clients"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".AddclientActivity"
            android:label="@string/title_activity_clients"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>
